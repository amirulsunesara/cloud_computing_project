<script>
function loadRequestAppraisalList(){
 
  $("#reqAp").attr("class", "active");
  $("#evAp").attr("class", "");

  $("#tableContent").html('');
          $.ajax({
                type: "GET",
                url: "http://localhost:1337/listRequestAppraisal",
                dataType: "json",
                contentType: "application/json",
                crossDomain: true,
                success: function (obj) {
                  var strHtml = '<table class="table table-bordered"><tr><th>MsID</th><th>Mortage ID</th><th>First Name</th><th>Last Name</th><th>Appraisal Information ($ amount)</th><th></th></tr>';
                  for(i=0;i<obj.length;i++)
                  {
                        strHtml = strHtml + '<tr><td>'+obj[i].msid+'</td><td>'+obj[i].mortid+'</td><td>'+obj[i].firstname+'</td><td>'+obj[i].lastname+'</td><td><input placeholder="Enter amount" id="txt'+obj[i].mortid+'" type="number" step="0.01" class="form-control"/></td><td><button type="button" class="btn btn-success" onclick="saveAppraiserInfo('+obj[i].mortid+')">Save</button></td><tr>';
                  }
                  strHtml = strHtml + "</html>";
                  $("#tableContent").html(strHtml);  

                }

            });
          }

loadRequestAppraisalList();
function loadEvaluatedAppraisalList(){

  $("#evAp").attr("class", "active");
  $("#reqAp").attr("class", "");
  
  $("#tableContent").html(''); 
          $.ajax({
                type: "GET",
                url: "http://localhost:1337/listEvaluatedAppraisal",
                dataType: "json",
                contentType: "application/json",
                crossDomain: true,
                success: function (obj) {
                  var strHtml = '<table class="table table-bordered"><tr><th>MsID</th><th>Mortage ID</th><th>First Name</th><th>Last Name</th><th>Appraisal Information ($ amount)</th><th>Evaluated By</th></tr>';
                  for(i=0;i<obj.length;i++)
                  {
                        strHtml = strHtml + '<tr><td>'+obj[i].msid+'</td><td>'+obj[i].mortid+'</td><td>'+obj[i].firstname+'</td><td>'+obj[i].lastname+'</td><td>'+obj[i].appraisalinfo+'</td><td>'+obj[i].evaluatedBy+'</td><tr>';
                  }
                  strHtml = strHtml + "</html>";
                  $("#tableContent").html(strHtml);  

                }

            });
          }

function saveAppraiserInfo(val)
{
 appraisalAmount = $('#txt'+val).val();
 if(!isNaN(appraisalAmount) && appraisalAmount != "")
 {
 $.ajax({
                type: "POST",
                url: "http://localhost:1337/evaluate",
                dataType: "json",
                data: JSON.stringify({ "mortid": val,"appraisalinfo":appraisalAmount }),
                contentType: "application/json",
                crossDomain: true,
                success: function (obj) {
                  alert("Successfully saved appraisal information");
                  loadEvaluatedAppraisalList();

                }

            });

}
else
{
  alert("Please enter a correct amount.");
}

}

            

</script>


